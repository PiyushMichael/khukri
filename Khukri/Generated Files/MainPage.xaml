<Page
    x:Class="Khukri.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Khukri"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="Dark"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid>
        <StackPanel x:ConnectionId='1' x:Name="contentPanel" Margin="120,30,10,10">
            <TextBlock HorizontalAlignment="Left" Text="Hello World" FontSize="36"/>
            <TextBlock Text="What's your name?"/>
            <StackPanel x:ConnectionId='2' x:Name="inputPanel" Orientation="Horizontal" Margin="0,20,0,20">
                <TextBox x:ConnectionId='4' x:Name="nameInput" Width="300" HorizontalAlignment="Left"/>
                <Button x:ConnectionId='5' x:Name="Button" Content="Say &quot;Hello&quot;"                     />
                <Button x:ConnectionId='6' x:Name="SecondButton" Content="try"                            Margin="20,0,0,0"/>
            </StackPanel>
            <TextBlock x:ConnectionId='3' x:Name="greetingOutput"/>
        </StackPanel>
    </Grid>
</Page>

